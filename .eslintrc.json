{
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": "next/core-web-vitals",
  "rules": {
    "max-len": [
      "warn",
      {
        "code": 120, // 한 줄에 120글자를 넘길 수 없음
        "ignoreComments": true, // 주석 제외
        "ignoreStrings": true, // 문자열 제외
        "ignoreTemplateLiterals": true // 템플릿 리터럴 제외
      }
    ],
    "no-console": "warn" // console.log 경고
  }
}
